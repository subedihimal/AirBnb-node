generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model Booking {
  id            Int            @id @default(autoincrement())
  userId        Int
  hotelId       Int
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  bookingAmount Int
  status        BookingStatus  @default(PENDING)
  totalGuest    Int
}

enum BookingStatus{
  PENDING
  CONFIRMED
  CANCELLED
}

